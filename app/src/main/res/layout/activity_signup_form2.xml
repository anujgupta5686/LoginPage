<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Signup_Form2">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign up Page"
       android:padding="10dp"
       android:textSize="20dp"
       android:layout_marginBottom="10dp"
       android:textColor="@color/inputBackground"
       android:background="@color/background"
       android:gravity="center"
       android:textAlignment="center"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
      >
      <EditText
          android:id="@+id/Sname"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:hint="Name"
          android:inputType="text"
          android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
          android:textColor="@color/inputBackground"
          android:textSize="15dp"
          android:padding="7dp"
          android:background="@color/background"
         />

      <EditText
          android:id="@+id/Smobile"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:background="@color/background"
          android:hint="Mobile No "
          android:inputType="number"
          android:drawableLeft="@drawable/ic_baseline_phone_24"
          android:padding="7dp"
          android:textColor="@color/inputBackground"
          android:textSize="15dp"

          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <EditText
          android:id="@+id/Semail"
          android:layout_width="360dp"
          android:layout_height="wrap_content"
          android:hint="Email Id "
          android:inputType="textEmailAddress"
          android:drawableLeft="@drawable/ic_baseline_email_24"
          android:textColor="@color/inputBackground"
          android:textSize="15dp"
          android:padding="7dp"
          android:background="@color/background"
          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:textAlignment="center"
       android:gravity="center"
       >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Create Password"
         android:textSize="22dp"
         android:padding="10dp"
         android:textColor="@color/anotherTextColor"
         />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"

       >
      <EditText
          android:id="@+id/Spass1"
          android:layout_width="360dp"
          android:layout_height="wrap_content"
          android:hint="Create Password "
          android:drawableLeft="@drawable/ic_baseline_create_24"
          android:inputType="textPassword"
          android:textColor="@color/inputBackground"
          android:textSize="15dp"
          android:padding="7dp"
          android:background="@color/background"

          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"

       >
      <EditText
          android:id="@+id/Spass2"
          android:layout_width="360dp"
          android:layout_height="wrap_content"
          android:hint="Confirm Password "
          android:drawableLeft="@drawable/ic_baseline_create_24"
          android:textColor="@color/inputBackground"
          android:textSize="15dp"
          android:padding="7dp"
          android:background="@color/background"

          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:textAlignment="center"
       android:gravity="center"
       >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Gender"
          android:textSize="22dp"
          android:padding="10dp"
          android:textColor="@color/anotherTextColor"
          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="5dp"

       >

      <CheckBox
          android:id="@+id/Scheck"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:text="If your all information is correct then checked it."
          android:textSize="14dp"
          android:textColor="@color/inputBackground"
          android:onClick="checkmate"
          />

   </LinearLayout>

   <!--Toast Output-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"


       >

      <TextView
          android:id="@+id/Soutput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:textSize="16dp"
          android:textColor="@color/purple_500"
          android:textAlignment="center"
          android:layout_gravity="center"
          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="5dp"
       android:textAlignment="center"
       android:gravity="center"

       >

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="5dp"
       android:gravity="center"
       >
      <Button
          android:id="@+id/Ssignup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="visible"
          android:text="Signup"


          />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="5dp"
       android:gravity="center"
       >
     <Button
         android:id="@+id/Slogin"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Login"


         />
   </LinearLayout>

</LinearLayout>